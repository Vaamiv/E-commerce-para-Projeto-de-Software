@startuml
hide circle
skinparam linetype ortho

entity users {
  * id : INT <<PK>>
  --
  name : VARCHAR(120)
  email : VARCHAR(150) <<UNIQUE>>
  password_hash : VARCHAR(255)
  role : VARCHAR(20)
  created_at : TIMESTAMP
}

entity products {
  * id : INT <<PK>>
  --
  name : VARCHAR(200)
  price : DECIMAL(10,2)
  description : TEXT
  created_at : TIMESTAMP
  updated_at : TIMESTAMP
}

@enduml
